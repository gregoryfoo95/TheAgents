# API Configuration
API_HOST=0.0.0.0
API_PORT=8002
DEBUG=True

# Stock AI Service Database (Separate from main backend)
STOCK_DATABASE_URL=postgresql://stock_user:stock_password@localhost:5433/stock_ai
POSTGRES_USER=stock_user
POSTGRES_PASSWORD=stock_password
POSTGRES_DB=stock_ai
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# OpenAI Configuration (required for LangGraph agents)
OPENAI_API_KEY=your_openai_api_key_here

# LLM Configuration
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.2

# External APIs
YAHOO_FINANCE_API=default  # yfinance uses Yahoo Finance by default
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key  # Optional alternative data source

# Logging
LOG_LEVEL=INFO

# Rate Limiting
ANALYSIS_RATE_LIMIT=10  # requests per minute per user
API_TIMEOUT=300  # seconds

# Cache Configuration (if needed)
REDIS_URL=redis://localhost:6379/2
CACHE_TTL=3600  # 1 hour cache for stock data