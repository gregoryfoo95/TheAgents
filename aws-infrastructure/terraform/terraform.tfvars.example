# Example Terraform variables file
# Copy this to terraform.tfvars and update with your values

aws_region     = "us-east-1"
environment    = "dev"
project_name   = "theagents"
vpc_cidr       = "10.0.0.0/16"

# Domain configuration (optional)
domain_name     = "yourdomain.com"
certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/12345678-1234-1234-1234-123456789012"

# ECR repository URLs (update after creating ECR repositories)
ecr_repository_urls = {
  auth_service     = "123456789012.dkr.ecr.us-east-1.amazonaws.com/theagents-auth-service:latest"
  property_service = "123456789012.dkr.ecr.us-east-1.amazonaws.com/theagents-property-service:latest"
  stock_service    = "123456789012.dkr.ecr.us-east-1.amazonaws.com/theagents-stock-service:latest"
  api_gateway      = "123456789012.dkr.ecr.us-east-1.amazonaws.com/theagents-api-gateway:latest"
  frontend         = "123456789012.dkr.ecr.us-east-1.amazonaws.com/theagents-frontend:latest"
}

# Database configuration
database_configs = {
  auth_db = {
    allocated_storage = 20
    instance_class    = "db.t3.micro"
    engine_version    = "15.4"
  }
  property_db = {
    allocated_storage = 20
    instance_class    = "db.t3.micro"
    engine_version    = "15.4"
  }
  stock_db = {
    allocated_storage = 20
    instance_class    = "db.t3.micro"
    engine_version    = "15.4"
  }
}

# Redis configuration
redis_node_type = "cache.t3.micro"

# ECS configuration
ecs_task_cpu    = 256
ecs_task_memory = 512

# Logging
enable_logs = true