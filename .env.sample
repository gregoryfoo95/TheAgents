# Docker Compose Environment Variables
# Copy this file to .env and update the values for your environment

# PostgreSQL Database Configuration
POSTGRES_DB=property_marketplace
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password

# Database URLs for Backend Service
DATABASE_URL=postgresql://postgres:your-secure-postgres-password@postgres:5432/property_marketplace
REDIS_URL=redis://redis:6379
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-characters

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@yourdomain.com
PGADMIN_DEFAULT_PASSWORD=your-secure-pgadmin-password
PGADMIN_CONFIG_SERVER_MODE=False

# Frontend Configuration
VITE_API_URL=http://localhost:8000

# Development Settings
COMPOSE_PROJECT_NAME=the_agents

# Production Notes:
# - Use strong, unique passwords for all services
# - Generate a secure SECRET_KEY (minimum 32 characters)
# - Consider using environment-specific configurations
# - For production, set PGADMIN_CONFIG_SERVER_MODE=True for multi-user access